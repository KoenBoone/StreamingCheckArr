@using StreamingCheckArr.Core.Models
@model IEnumerable<StreamingCheckArr.Core.Models.SonarrSeries>

@{
    ViewData["Title"] = "Sonarr Series";
    configParameters cp = new configParameters();
}

<h1>Series</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card">
    <div class="card-header border-0">
        <h3 class="card-title">Sonarr Series</h3>
        <div class="card-tools">
        <!--
        <a href="#" class="btn btn-tool btn-sm">
            <i class="fas fa-download"></i>
        </a>
        <a href="#" class="btn btn-tool btn-sm">
            <i class="fas fa-bars"></i>
        </a>
        -->
        </div>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-striped table-valign-middle">
            <thead>
                <tr>
                    <th>Show</th>
                    <th>tvdbId</th>
                    <th>tmdbId</th>
                    <th>imdbId</th>
                    <th>SonarId</th> 
                    <th>Streamin in @cp.CountryCode on</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                    string localPoster = "http://" + cp.SonarrIp + ":" + cp.SonarrPort + item.localPoster;
                <tr>
                    <td>
                            <img src="@localPoster" alt="Poster" class="img-rounded img-size-32 mr-2">
                            @item.title (@item.year)
                    </td>
                    <td>
                        @item.tvdbId
                    </td>
                    <td>
                        @item.tmdbId
                    </td>
                    <td>
                        @item.imdbId
                    </td>
                    <td>
                        @item.id
                    </td>
                    <td></td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>