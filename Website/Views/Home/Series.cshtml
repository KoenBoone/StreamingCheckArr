@model IEnumerable<StreamingCheckArr.Core.Models.SonarrSeries>

@{
    ViewData["Title"] = "Series";
}

<h1>Series</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card">
    <div class="card-header border-0">
        <h3 class="card-title">Sonarr Series</h3>
        <div class="card-tools">
        <!--
        <a href="#" class="btn btn-tool btn-sm">
            <i class="fas fa-download"></i>
        </a>
        <a href="#" class="btn btn-tool btn-sm">
            <i class="fas fa-bars"></i>
        </a>
        -->
        </div>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-striped table-valign-middle">
            <thead>
                <tr>
                    <th>Show</th>
                    <th>Year</th>
                    <th>tvdbId</th>
                    <th>tmdbId</th>
                    <th>imdbId</th>
                    <th>SonarId</th> 
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        <img src="~/AdminLTE/dist/img/default-150x150.png" alt="Product 1" class="img-circle img-size-32 mr-2">
                            @item.title
                    </td>
                    <td>@item.year</td>
                    <td>
                        @item.tvdbId
                    </td>
                    <td>
                        @item.tmdbId
                    </td>
                    <td>
                        @item.imdbId
                    </td>
                    <td>
                        @item.id
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>