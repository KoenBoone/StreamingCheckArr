@using Microsoft.AspNetCore.Mvc.TagHelpers
@using StreamingCheckArr.Core.Models
@using StreamingCheckArr.Website.Components
@model IEnumerable<StreamingCheckArr.Core.Models.RadarrMovies>

@{
    ViewData["Title"] = "Radarr movies";
    configParameters cp = new configParameters();
}

<h1>Radarr movies</h1>

<p>
    <a asp-controller="Movies" asp-action="Index" asp-route-getNew="true">Refresh all from Radarr</a> |
    <a asp-controller="Movies" asp-action="GetStreamersAll">Refresh all streaming info (use carefully!)</a>
</p>

<div class="card">
    <div class="card-header border-0">
        <!--<h3 class="card-title">Radarr Movies</h3>-->
        <input type="text" id="searchInput" onkeyup="searchMovies()" placeholder="Search for movies..">
        <button type="button" onclick="clearSearch()">Clear search</button>
        <div class="card-tools">
        </div>

        <script>
            function clearSearch() {
                document.getElementById("searchInput").value = "";
                searchMovies();
            }
        </script>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-striped table-valign-middle" id="moviesTable">
            <thead>
            <tr>
                <th>Movies</th>
                <th>tmdb ID</th>
                <th>imdb ID</th>
                <th>Radarr ID</th>
                <th>Flatrate or free streaming in @cp.CountryCode</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                string localPoster = "http://" + cp.RadarrIp + ":" + cp.RadarrPort + item.localPoster;
                string tmdbUrl = "https://www.themoviedb.org/movie/" + item.tmdbId;
                string streamingInfoDiv = item.tmdbId + "_StreamingInfo";
                <tr>
                    <td>
                        <img src="@localPoster" alt="Poster" class="img-rounded img-size-64 mr-2">
                        @item.title (@item.year)
                    </td>
                    <td>
                        <a href="@tmdbUrl" target="_blank">@item.tmdbId</a>
                    </td>
                    <td>
                        @item.imdbId
                    </td>
                    <td>
                        @item.id
                    </td>
                    <td>
                        <div id="@streamingInfoDiv">
                                @await (Component.InvokeAsync<StreamersViewComponent>(new { tmdbID = item.tmdbId, movieOrSeries = "movie" }))
                        </div>
                    </td>
                    <td>
                        @if (item.tmdbId == 0)
                        {
                            <span class="text-red">No TMDB ID |</span>
                        }
                        else
                        {
                            <span>
                                <a href="javascript:void(0);" onclick="updateStreamingInfo(@item.tmdbId)">Update Streaming</a>
                                |
                            </span>
                        }
                        Delete from Radarr
                        <!--@Html.ActionLink("Delete from Radarr", "Delete", new
                            {
                                /* id=item.PrimaryKey */
                            })-->
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function updateStreamingInfo(tmdbID) {
            var streamingInfoDiv = tmdbID + "_StreamingInfo";
            document.getElementById(streamingInfoDiv).innerHTML = "checking";
            fetch(`/Movies/RefreshStreamers?tmdbID=${tmdbID}`)
                .then(response => response.text())
                .then(html => {
                    document.getElementById(streamingInfoDiv).innerHTML = html;
                })
                .catch(error => document.getElementById(streamingInfoDiv).innerHTML = 'Error loading streamers:' + error);
        }

        function searchMovies() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("searchInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("moviesTable");
            tr = table.getElementsByTagName("tr");
            for (i = 1; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    </script>
}
