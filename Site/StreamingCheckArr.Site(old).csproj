  </PropertyGroup>

  <ItemGroup>
    <Content Remove="Data\sonarr.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\Core\appsettings.json" Link="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\Core\Data\Sonarr.json" Link="Data\Sonarr.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
